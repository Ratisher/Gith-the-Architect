<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3defa">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="911dp"
        android:translationY="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="57dp"
            android:layout_height="58dp"
            android:foregroundTint="#7631E9"
            app:srcCompat="@drawable/ic_action_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вход"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:textSize="24sp"
            android:translationX="65dp"
            android:translationY="13dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Номер телефона"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#7631E9"
            android:textColorLink="#7631E9"
            android:translationX="40dp"
            android:translationY="105dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:inputType="phone"
            android:textColor="#7631E9"
            android:textColorHighlight="#7631E9"
            android:textColorHint="#7631E9"
            android:textColorLink="#7631E9"
            android:translationX="35dp"
            android:translationY="125dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:text="Войти"
            android:textColor="#E2D2D2"
            android:translationX="40dp"
            android:translationY="780dp" />

    </FrameLayout>

</FrameLayout>