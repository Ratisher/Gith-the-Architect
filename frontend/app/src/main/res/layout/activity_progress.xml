<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c3defa">

        <Button
            android:id="@+id/button11"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:background="#00FFFFFF"
            android:translationX="155dp"
            android:translationY="788dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="99dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:translationX="25dp"
            android:translationY="820dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="99dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:translationX="300dp"
            android:translationY="820dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="368dp"
            android:layout_height="219dp"
            android:background="#FDFCFC"
            android:translationX="12dp"
            android:translationY="568dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:scaleType="centerCrop"
                android:src="@drawable/quest3" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="#FFFFFF"
                android:translationY="122dp">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:text="Знаменский кафедральный собор, улица Соборная, Кемерово, Россия."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#000000"
                    android:translationX="15dp"
                    android:translationY="45dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:background="#F44336"
                    android:text="Не посещен"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFFFFF"
                    android:translationX="15dp"
                    android:translationY="15dp" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="368dp"
            android:layout_height="253dp"
            android:background="#FDFCFC"
            android:translationX="12dp"
            android:translationY="60dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:scaleType="fitXY"
                android:src="@drawable/quest5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="#FFFFFF"
                android:translationY="155dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:text="Аллея Героев. Прокопьевск, Кемеровская область — Кузбасс"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#000000"
                    android:translationX="15dp"
                    android:translationY="45dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:background="#4CAF50"
                    android:text="Посещен"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFFFFF"
                    android:translationX="15dp"
                    android:translationY="15dp" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="368dp"
            android:layout_height="219dp"
            android:background="#FDFCFC"
            android:translationX="12dp"
            android:translationY="330dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:scaleType="fitXY"
                android:src="@drawable/quest6" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="#FFFFFF"
                android:translationY="122dp">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:text="Прокопьевский драматический театр имени Ленинского комсомола..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#000000"
                    android:translationX="15dp"
                    android:translationY="45dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:background="#F44336"
                    android:text="Не посещен"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFFFFF"
                    android:translationX="15dp"
                    android:translationY="15dp" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="57dp"
            android:layout_height="58dp"
            android:foregroundTint="#7631E9"
            android:src="@drawable/ic_action_name"
            android:translationY="5dp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="59dp"
            android:layout_height="61dp"
            android:background="#00FFFFFF"
            android:translationY="5dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прогресс"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:textSize="24sp"
            android:translationX="65dp"
            android:translationY="15dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:translationY="330dp" />

    </FrameLayout>
</LinearLayout>