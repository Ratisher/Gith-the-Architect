<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c3defa">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="57dp"
            android:layout_height="58dp"
            android:foregroundTint="#7631E9"
            android:src="@drawable/ic_action_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подтверждение"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:textSize="24sp"
            android:translationX="65dp"
            android:translationY="13dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Код подтверждения"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#7631E9"
            android:textColorLink="#7631E9"
            android:translationX="40dp"
            android:translationY="148dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="На указанный номер телефона отправлени СМС с кодом подтверждения"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#7631E9"
            android:textColorLink="#7631E9"
            android:translationX="40dp"
            android:translationY="105dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Код активен еще"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:translationX="40dp"
            android:translationY="225dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:inputType="phone"
            android:textColor="#7631E9"
            android:textColorHighlight="#7631E9"
            android:textColorHint="#7631E9"
            android:textColorLink="#7631E9"
            android:translationX="35dp"
            android:translationY="169dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:text="Подтвердить"
            android:textColor="#E2D2D2"
            android:translationX="40dp"
            android:translationY="650dp" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>