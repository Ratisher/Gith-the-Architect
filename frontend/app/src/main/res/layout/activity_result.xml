<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c3defa">

        <Button
            android:id="@+id/button14"
            android:layout_width="59dp"
            android:layout_height="61dp"
            android:background="#00FFFFFF" />

        <Button
            android:id="@+id/button8"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:background="#00FFFFFF"
            android:translationX="155dp"
            android:translationY="785dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="99dp"
            android:layout_height="72dp"
            android:background="#00FFFFFF"
            android:translationX="25dp"
            android:translationY="820dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="99dp"
            android:layout_height="72dp"
            android:background="#00FFFFFF"
            android:translationX="300dp"
            android:translationY="820dp" />

        <FrameLayout
            android:layout_width="368dp"
            android:layout_height="203dp"
            android:background="#FDFCFC"
            android:translationX="22dp"
            android:translationY="65dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:scaleType="fitXY"
                android:src="@drawable/phototest" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="На карте"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:textSize="20sp"
            android:translationX="22dp"
            android:translationY="281dp" />

        <FrameLayout
            android:layout_width="368dp"
            android:layout_height="170dp"
            android:background="#FDFCFC"
            android:translationX="22dp"
            android:translationY="321dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/map" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="История"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:textSize="20sp"
            android:translationX="22dp"
            android:translationY="504dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="368dp"
            android:layout_height="148dp"
            android:text="История Прокопьевского театра, как и самого города, тесно связана с развитием угольной промышленности. Первый любительский кружок возник в 1934 году, организованный шахтерами. В 1935 году был создан “Пролетарский театр”. Первые спектакли ставились в клубе шахты “Зима” и в здании Дворца культуры."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:textSize="14sp"
            android:translationX="22dp"
            android:translationY="534dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="57dp"
            android:layout_height="58dp"
            android:foregroundTint="#7631E9"
            android:src="@drawable/ic_action_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сводка по зданию"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textColorLink="#7631E9"
            android:textSize="24sp"
            android:translationX="65dp"
            android:translationY="13dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#EBE8E8"
            android:translationY="824dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сделать фото"
                android:textSize="10sp"
                android:translationX="170dp"
                android:translationY="45dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:src="@drawable/mapicon"
                android:translationX="327dp"
                android:translationY="10dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карта"
                android:textSize="10sp"
                android:translationX="335dp"
                android:translationY="45dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:src="@drawable/progressicon"
                android:translationX="57dp"
                android:translationY="10dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прогресс"
                android:textSize="10sp"
                android:translationX="55dp"
                android:translationY="45dp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="82dp"
            android:src="@drawable/photoicon"
            android:translationX="155dp"
            android:translationY="785dp" />

    </FrameLayout>

</LinearLayout>